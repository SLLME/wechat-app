@import "./miniprogram_npm/weui-miniprogram/weui-wxss/dist/style/weui.wxss"
/**app.wxss**/
page{
  height: 100%;
  width: 100%;
  font-size: 12px;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.app-container{
  height: 100%;
  font-size: 1rem;
}

.public-center{
  text-align: center;
}
.public-left{
  text-align: left;
}
.public-right{
  text-align: right;
}
.public-width-100{
  width: 100%!important;
}

.public-flex{
  display: flex;
  flex-direction: column;
}
.public-flex-top{
  flex: 0;
}
.public-flex-content{
  flex: 1;
  overflow: auto;
}
.public-flex-buttom{
  flex: 0;
}

.weui-dialog__hd {
  padding: 16px 24px 16px!important;
}
.weui-dialog__bd {
 margin-bottom: 10px!important;
}