/* pages/home/fileinput/fileinput.wxss */
.my-weui-uploader__input-box{
  overflow: hidden;
  float: left;
  position: relative;
  margin-right: 8px;
  margin-bottom: 8px;
  width: 96px;
  height: 96px;
  box-sizing: border-box;
  background-color: #ededed;
}
.my-weui-uploader__input-box image{
  width: 100%;
}
.files-body{
  padding: 10px;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.my-weui-uploader-close{
  position: absolute;
  top: -18px;
  background: #ededed;
  right: 0;
  border-bottom-left-radius: 10px;
  padding: 3px;
}
.my-weui-uploader-close .weui-icon {
  vertical-align: bottom!important;
}